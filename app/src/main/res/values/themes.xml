<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EffortlessFlow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aqua_accent_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Keep MaterialComponents but disable default ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- General text colors for consistency. -->
        <item name="android:textColorPrimary">@color/dark_charcoal_text</item>
        <item name="android:textColorSecondary">@color/medium_gray_text</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EffortlessFlow.NoActionBar" parent="Theme.EffortlessFlow" />

    <!-- Popup Menu Theme for the MaterialToolbar's overflow menu -->
    <!-- This ensures dark text on a light background for popups -->
    <style name="ThemeOverlay.AppCompat.Light.PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/dark_charcoal_text</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_gray_hint</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>