<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_background" >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/task_details_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/task_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/aqua_accent_dark"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="New Task"
            app:titleTextColor="@color/white"
            app:menu="@menu/task_details_menu"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light.PopupMenu" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/task_details_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/task_details_app_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_task_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp" >

            <TextView
                android:id="@+id/task_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_task_title"
                android:textColor="@color/dark_charcoal_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/task_title_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintEnabled="false"
                app:boxStrokeColor="@color/teal_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_title_tv" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/task_title_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:textColor="@color/dark_charcoal_text"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Sub-tasks container - Initially hidden -->
            <LinearLayout
                android:id="@+id/added_subtasks_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_title_layout">

                <TextView
                    android:id="@+id/subtasks_label_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_subtasks"
                    android:textColor="@color/dark_charcoal_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/stask_btn_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:background="@drawable/rounded_dialog_background">
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/task_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_task_description"
                android:textColor="@color/dark_charcoal_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/added_subtasks_container" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/task_description_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintEnabled="false"
                app:boxStrokeColor="@color/teal_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_description_tv">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/task_description_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="3"
                    android:gravity="top"
                    android:textColor="@color/dark_charcoal_text"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/due_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_due_date"
                android:textColor="@color/dark_charcoal_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_description_layout" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/task_due_date_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:endIconMode="dropdown_menu"
                app:boxStrokeColor="@color/teal_primary"
                app:layout_constraintTop_toBottomOf="@id/due_date_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/task_due_date_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_select_date"
                    android:inputType="none"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:textColor="@color/dark_charcoal_text"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/effort_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/label_effort"
                android:textColor="@color/dark_charcoal_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_due_date_layout" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/task_effort_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:hintEnabled="false"
                app:boxStrokeColor="@color/teal_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/effort_tv">

                <AutoCompleteTextView
                    android:id="@+id/task_effort_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textColor="@color/dark_charcoal_text"
                    android:textSize="16sp"
                    tools:text="Low"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ai_suggestions_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/aqua_accent"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/button_get_ai_suggestions"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/task_effort_layout" />

            <LinearLayout
                android:id="@+id/ai_suggestion_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ai_suggestions_btn">

                <TextView
                    android:id="@+id/ai_suggestions_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_suggestions_title"
                    android:textColor="@color/dark_charcoal_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Main Select All Checkbox -->
                <CheckBox
                    android:id="@+id/select_all_subtasks_cb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_select_all_subtasks"
                    android:textColor="@color/dark_charcoal_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:buttonTint="@color/aqua_accent"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Individual Sub-tasks Container -->
                <LinearLayout
                    android:id="@+id/subtasks_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- Sub-task 1 -->
                    <LinearLayout
                        android:id="@+id/subtask_1_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">
                        <CheckBox
                            android:id="@+id/subtask_1_cb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_charcoal_text"
                            android:textSize="16sp"
                            android:buttonTint="@color/aqua_accent"
                            android:paddingTop="4dp"
                            android:paddingBottom="2dp"
                            tools:text="Research and gather requirements" />
                        <TextView
                            android:id="@+id/subtask_1_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/medium_gray_text"
                            android:textSize="14sp"
                            android:layout_marginStart="32dp"
                            android:layout_marginBottom="4dp"
                            tools:text="Estimated time: 2 hours" />
                    </LinearLayout>

                    <!-- Sub-task 2 -->
                    <LinearLayout
                        android:id="@+id/subtask_2_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">
                        <CheckBox
                            android:id="@+id/subtask_2_cb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_charcoal_text"
                            android:textSize="16sp"
                            android:buttonTint="@color/aqua_accent"
                            android:paddingTop="4dp"
                            android:paddingBottom="2dp"
                            tools:text="Create initial design mockups" />
                        <TextView
                            android:id="@+id/subtask_2_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/medium_gray_text"
                            android:textSize="14sp"
                            android:layout_marginStart="32dp"
                            android:layout_marginBottom="4dp"
                            tools:text="Estimated time: 3 hours" />
                    </LinearLayout>

                    <!-- Sub-task 3 -->
                    <LinearLayout
                        android:id="@+id/subtask_3_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">
                        <CheckBox
                            android:id="@+id/subtask_3_cb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_charcoal_text"
                            android:textSize="16sp"
                            android:buttonTint="@color/aqua_accent"
                            android:paddingTop="4dp"
                            android:paddingBottom="2dp"
                            tools:text="Implement core functionality" />
                        <TextView
                            android:id="@+id/subtask_3_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/medium_gray_text"
                            android:textSize="14sp"
                            android:layout_marginStart="32dp"
                            android:layout_marginBottom="4dp"
                            tools:text="Estimated time: 4 hours" />
                    </LinearLayout>

                    <!-- Sub-task 4 -->
                    <LinearLayout
                        android:id="@+id/subtask_4_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">
                        <CheckBox
                            android:id="@+id/subtask_4_cb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_charcoal_text"
                            android:textSize="16sp"
                            android:buttonTint="@color/aqua_accent"
                            android:paddingTop="4dp"
                            android:paddingBottom="2dp"
                            tools:text="Testing and bug fixes" />
                        <TextView
                            android:id="@+id/subtask_4_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/medium_gray_text"
                            android:textSize="14sp"
                            android:layout_marginStart="32dp"
                            android:layout_marginBottom="4dp"
                            tools:text="Estimated time: 2 hours" />
                    </LinearLayout>

                    <!-- Sub-task 5 -->
                    <LinearLayout
                        android:id="@+id/subtask_5_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone">
                        <CheckBox
                            android:id="@+id/subtask_5_cb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_charcoal_text"
                            android:textSize="16sp"
                            android:buttonTint="@color/aqua_accent"
                            android:paddingTop="4dp"
                            android:paddingBottom="2dp"
                            tools:text="Final review and deployment" />
                        <TextView
                            android:id="@+id/subtask_5_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/medium_gray_text"
                            android:textSize="14sp"
                            android:layout_marginStart="32dp"
                            android:layout_marginBottom="4dp"
                            tools:text="Estimated time: 1 hour" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Action buttons for AI suggestions -->
                <LinearLayout
                    android:id="@+id/ai_suggestion_actions_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_subtasks_btn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="@string/button_add_subtasks"
                        android:textColor="@color/aqua_accent"
                        app:strokeColor="@color/aqua_accent"
                        app:cornerRadius="8dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/regenerate_subtasks_btn"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/button_regenerate_selected"
                        android:textColor="@color/white"
                        app:cornerRadius="8dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Loading indicator for AI suggestions -->
            <ProgressBar
                android:id="@+id/ai_loading_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:indeterminateTint="@color/aqua_accent"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ai_suggestions_btn" />

            <TextView
                android:id="@+id/ai_loading_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/generating_ai_suggestions"
                android:textColor="@color/medium_gray_text"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ai_loading_pb" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_task_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>