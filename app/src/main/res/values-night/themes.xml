<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EffortlessFlow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aqua_accent</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- CRITICAL: Disable ActionBar completely -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- General text colors for consistency in dark mode. -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Light text for dark backgrounds -->
        <item name="android:textColorSecondary">@color/light_gray_hint</item> <!-- Lighter gray for secondary text -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EffortlessFlow.NoActionBar" parent="Theme.EffortlessFlow" />

    <!-- Popup Menu Theme for the MaterialToolbar's overflow menu in dark mode -->
    <!-- Still uses Light Popup theme for consistent look, but its background might be slightly darker -->
    <style name="ThemeOverlay.AppCompat.Light.PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/medium_gray_text</item>
        <!-- You might want a slightly darker background for popup menus in dark mode
             <item name="android:background">@color/gray_800</item> -->
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_gray_hint</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>